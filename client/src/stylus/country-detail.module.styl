@import "./variables.styl"
@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;700&display=swap');

.container
    display: flex
    width: 100%
    height: 100vh
    font-family: 'Open Sans', sans-serif

    .wrap
        display: flex
        width: inherit
        height: inherit
        aside
            .sidebarTexts
                width:100%
                display: flex
                flex-direction: column
                justify-content: center
                align-items: center
                gap: 2rem
                h1
                    width:inherit
                    text-align: center
                    color: base-color
                    font-size: 2rem
                .region
                    width:inherit
                    display: flex
                    flex-direction: column
                    justify-content: center
                    align-items: center
                    gap:0.5rem
                    h3
                        width:inherit
                        text-align: center
                        color: third-color
                        font-size: 1.5rem
                        padding 0
                        margin 0
                    h4
                        width:inherit
                        text-align: center
                        color: base-color
                        padding 0
                        margin 0
        .content
            position: relative
            overflow: hidden
            display: flex
            justify-content: space-around
            align-items: center
            padding: 0 5rem
            background-color: base-color
            gap: 2rem
            flex-wrap:wrap
            @media screen and (min-width: 375px)
                width: 100%;
                padding: 0 1rem
            @media screen and (min-width: 411px)
                padding: 0 2rem
            .bgImg
                position: absolute
                top:0
                right: 0
                display: block;
                margin-left: auto;
                margin-right: auto;
                width: 120vh;
                height:100% ;
            .activities
                display: flex
                flex-direction: column
                justify-content: space-between
                align-items: center
                z-index: 998
                color: main-color
                gap: 1.5rem
                padding: 2rem
                background-color: rgba(240, 241, 245,0.7)
                box-shadow: rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.1) 0px 16px 56px, rgba(17, 17, 26, 0.1) 0px 24px 80px;
                border-radius: 1.5rem
                h1
                    font-size:2.5rem
                .activitiesGroup
                    width:100%
                    .item
                        width:100%
                        display:flex
                        align-items:center
                        font-size: 1rem
                        h4
                            margin-top:0
                            margin-bottom:0
                            margin-right:1rem
                        p
                            margin:0
                        .seasons
                            display:flex
                            align-items:center
                            justify-content:flex-start
                            gap:0.5rem
                            font-size: 12px
                            p
                                text-transform: capitalize
                                padding: 0.1rem 0.6rem
                                border-radius: 0.5rem
                                background-color:third-color
            .stats
                display: flex
                flex-direction: column
                justify-content: space-between
                align-items: center
                z-index: 998
                gap: 1.5rem
                padding: 2rem
                background-color: rgba(240, 241, 245,0.7)
                box-shadow: rgba(17, 17, 26, 0.1) 0px 8px 24px, rgba(17, 17, 26, 0.1) 0px 16px 56px, rgba(17, 17, 26, 0.1) 0px 24px 80px;
                border-radius: 1.5rem
                .item
                    display: flex
                    justify-content: space-between
                    align-items: center
                    width:350px
                    @media screen and (max-width: 678px)
                        width: 250px
                    .cardImg
                        width:80px
                        height:80px
                        clip-path: circle();
                    .logo
                        width: 70px
                        height: auto
                        @media screen and (max-width: 678px)
                            width: 40px
                    div
                        display:flex
                        flex-direction:column
                        justify-content: center
                        align-items:center
                        .statTitle
                            font-size: 2.5rem
                            font-weight: bold
                            margin:0
                            @media screen and (max-width: 678px)
                                font-size: 1.5rem
                        .statSubtitle
                            font-size: 2rem
                            font-weight: semibold
                            margin:0
                            @media screen and (max-width: 678px)
                                font-size: 1rem
