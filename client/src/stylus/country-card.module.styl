@import "./variables.styl"

.card
    display: flex
    flex-direction:column
    align-items:center
    justify-content:center
    width: 150px
    height:150px
    border-radius: 100%
    background: white
    box-shadow: 4px 4px 4px #34352a

    .cardImg
        width:50px
        height:50px
        border-radius: 100%
    .cardBody
        text-align: center
        margin-top: 0.8rem
        .countryTitle
            font-weight: bold
            font-size: 1rem
        .continent
            font-size: 0.7rem
