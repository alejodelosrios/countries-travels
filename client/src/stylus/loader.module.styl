@import "./variables.styl"

.loaderContainer
    position: fixed
    top: 0
    left: 0
    width: 100vw
    height: 100vh
    background-color: rgba(255, 255, 255, 0.7)
    .logo
        position: absolute
        left: 0
        top: 0
        right: 0
        bottom: 0
        margin: auto
        z-index: 1000
        width: 10rem
        height: 10rem
        animation: rotation 5s infinite linear

@keyframes rotation {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(359deg);
  }
}
