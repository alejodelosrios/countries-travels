@import "./variables.styl"


.container
    display:flex
    flex-direction:column
    justify-content:center
    align-items:center
    width: 50vw
    gap: 2rem
    .groupTwo
        width:inherit
        display:flex
        gap:1rem
    .group
        width:inherit
        display:flex
        flex-direction:column
        gap:0.2rem
        input
            height: 2.5rem
            border-radius: 1.5rem
            padding: 0.2rem 1rem
            margin: 1rem 0
            border: 1px solid
            background: white
        .error
            color: red
            font-family: second-font
            font-size:12px
    .season
        width:inherit
        display:flex
        flex-direction:column
        align-items:center
        gap:0.2rem
    .countrySearch
        width:inherit
        display:flex
