.modal, .overlay
    width: 100vw
    height: 100vh
    top: 0
    left: 0
    right: 0
    bottom: 0
    position: fixed

.overlay
    background: rgba(49,49,49,0.8)
.modalContent
    position: absolute
    top: 40%
    left: 50%
    transform: translate(-50%, -50%)
    line-height: 1.4
    background: base-color
    color:main-color
    padding: 2rem
    border-radius: 1rem
    max-width: 800px
    min-width: 300px
    h2
        margin:0
    .errorMsg
        color: red
    .buttonsContainer
        width: 100%
        display:flex
        justify-content: space-between
        align-items: center
