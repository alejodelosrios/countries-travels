@import "./variables.styl"

.container
  width:100%
  display:flex
  flex-direction:column
  align-items:center
  gap: 0.1rem
  .checkbox
    width: 100%
    .hidden
        position:absolute
        visibility: hidden
        opacity: 0
        width:100%

    input[type=radio]+label
      display: inline-block
      color: main color
      width: 100%
      border-radius: 0.5rem
      padding: 0.5rem
      transition: all 0.3s
      &:hover
        color: main-color
        border: 0.7px solid
        border-color: main-color

    input[type=radio]:checked+label
      width: 100%
      color: base-color
      background-color: main-color
