@import "./variables.styl"

/* -------- Reset CSS ----- */

html
    box-sizing: border-box
    font-family: main-font
    font-size: font-size
    scroll-behavior: scroll

*,
*:before,
*:after
    box-sizing: inherit

body
    background-color: white
    margin: 0
    overflow-x: hidden
    height: 100vh

img
    max-width: 100%
    height:uto
    h3
        margin: 0
        #root
            display: flex
            flex-direction: column
            lign-items: center
