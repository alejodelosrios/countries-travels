@import "./variables.styl"

.container
    display:flex
    flex-direction: column
    align-items: center
    justify-content: space-between
    width: 100%
    max-height: 40vh
    padding:  0.5rem
    p
        margin-top: 0
        margin-bottom:1rem
        font-size:12px
    input[type="text"]
        width: inherit
        border-radius: 0.5rem
        padding: 0.5rem
        border:none
        font-size: 12px
        &:focus
            outline:none
            border: 1px solid main-color
    .countriesList
        width:inherit
        height:100%
        overflow-Y: auto
        background-color: base-color
        margin-bottom:0
        padding:  0.5rem
        border-radius:0.5rem
        li
            list-style-type:none
            transition: all 0.2s
            &:hover
                cursor:pointer
                background-color:main-color
                color: white
