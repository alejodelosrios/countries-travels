@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;700&family=Signika+Negative:wght@400;500;600;700&display=swap')

main-font = 'Signika Negative', sans-serif
second-font ='Open Sans', sans-serif
font-size = 14px
container-width = 1200px

/* --- Colors ---- */
main-color = #002448
secondary-color = #E3E7E8
third-color = #FFC68D
base-color = #F0F1F5
main-modal-color = blue
main-text-color = #002448


/* --- Classes ---- */
.mainSelect
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    height: 2.5rem
    border-radius: 1.5rem
    padding: 0.2rem 1rem
    border: none
    background: white

.darkBtn
    background-color: main-color
    color: white
    padding: 0.5rem 1rem
    border-radius:0.5rem
    border:none
    font-size: 14px
    &:hover
        background-color: base-color
        color: main-color
        border: 1px solid main-color


.lightBtn
    background-color: base-color
    color: main-color
    padding: 0.5rem 1rem
    border-radius:0.5rem
    border:1px solid main-color
    font-size: 14px
    &:hover
        background-color: main-color
        color: white
        border: 1px solid white
